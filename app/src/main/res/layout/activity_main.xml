                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/tom"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_tom15"
                android:layout_width="0dp"
                android:layout_height="@dimen/obstacle_height"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/tom"
                />
        </LinearLayout>
        <!-- sixth row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_tom16"
                android:layout_width="0dp"
                android:layout_height="@dimen/obstacle_height"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/tom"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_tom17"
                android:layout_width="0dp"
                android:layout_height="@dimen/obstacle_height"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/tom"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_tom18"
                android:layout_width="0dp"
                android:layout_height="@dimen/obstacle_height"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/tom"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/character_height"
        android:layout_weight="1"
        android:layout_above="@id/buttons"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/main_IMG_jerry1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/jerry"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/main_IMG_jerry2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/jerry"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/main_IMG_jerry3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/jerry"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <!-- Left Button -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/main_BTN_left"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/arrow_left"
            android:background="@android:color/transparent"
            android:layout_margin="@dimen/button_margin"
             /> <!-- Ensure it stays on the left -->

        <!-- Space between buttons -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Right Button -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/main_BTN_right"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/arrow_right"
            android:background="@android:color/transparent"
            android:layout_margin="@dimen/button_margin"
            /> <!-- Ensure it stays on the right -->

    </LinearLayout>


</RelativeLayout>